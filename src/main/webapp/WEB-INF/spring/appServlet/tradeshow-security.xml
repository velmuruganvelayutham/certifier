	<security:user-service id="userDetailsService">
		    <security:user name="admin" password="admin" authorities="ROLE_USER, ROLE_ADMIN, ROLE_GUEST" />
		    <security:user name="user" password="user" authorities="ROLE_USER" />
		     <security:user name="guest" password="guest" authorities="ROLE_GUEST" />
	</security:user-service>
	<security:http pattern="/resources/**" security="none" />
	<security:http pattern="/login" security="none"/>
    <security:http auto-config='true' authentication-manager-ref="userAuthenticationManager" use-expressions="true">
    <security:form-login login-page="/login" authentication-failure-url="/login?login_error" default-target-url="/exhibitors"  />
    <security:logout logout-success-url="/logout" invalidate-session="true"/>
    <security:intercept-url pattern="/**" access="hasAnyRole('ROLE_USER','ROLE_GUEST')" />
    </security:http>
  
   <security:authentication-manager id="userAuthenticationManager">
		<security:authentication-provider user-service-ref="userDetailsService">
		</security:authentication-provider>
  </security:authentication-manager>
   
